{
  "name": "heartwood",
  "version": "0.1.0",
  "main": "main.js",
  "type": "module",
  "packageManager": "yarn@4.5.2",
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon main.js",
    "lint": "PROJECT_NAME='Heartwood' PROJECT_SCOPE='whole project' eslint . --ext .js --report-unused-disable-directives --format ./eslint-formatter.cjs",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:watch": "PROJECT_NAME='Heartwood' PROJECT_SCOPE='whole project' esw . --ext .js --watch --color --clear --format ./eslint-formatter.cjs",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "aipack": "yarn repomix --style markdown -o heartwood-whole-project.md"
},
  "engines": {
    "node": "22.11.0"
  },
  "dependencies": {
    "@fastify/swagger": "8",
    "@fastify/swagger-ui": "4",
    "chokidar": "^3.6.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.28.1",
    "repomix": "^1.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-watch": "8.0.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "prettier": "3.2.4"
  }
}
